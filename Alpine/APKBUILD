pkgname=sturmreader
pkgver=3.2.2
pkgrel=0
pkgdesc="E-Book reader optimized for mobile linux"
url="https://github.com/tronfortytwo/sturmreader"
arch="x86_64"
license="GNU-GPL-3-OR-ABOVE"
depends="qt5-qtdeclarative qt5-qtquickcontrols2 poppler-qt5"
makedepends="cmake qt5-qtdeclarative-dev qt5-qtquickcontrols2-dev unzip poppler-qt5-dev"
install=""
subpackages=""
source="https://codeload.github.com/tronfortytwo/sturmreader/zip/master"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$srcdir"
	unzip -x master
	#cd "$pkgname-$pkgver"
	#cd "$pkgname-master"
	cd "$pkgname-master"
	chmod +x ui/qml/encoder.sh
	mkdir "build"
	cd build
	cmake ..
	make -j1
}

